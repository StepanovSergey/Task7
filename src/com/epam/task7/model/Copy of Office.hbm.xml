<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.epam.task7.model">

	<class name="Office" table="OFFICE">
		<composite-id name="officePK" class="com.epam.task7.model.OfficePK">
			<key-property name="company" type="integer" column="ID_COMPANY"></key-property>
			<key-property name="employee" type="integer" column="ID_EMPLOYEE"></key-property>
			<key-property name="address" type="integer" column="ID_ADDRESS"></key-property>
		</composite-id>
		<many-to-one name="position" class="com.epam.task7.model.Position"
			column="id_position" fetch="join" not-null="true" />
	</class>

</hibernate-mapping>